<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.homevault.client.vault.VaultItemDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Password / Secret:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="secretField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="errorLabel" textFill="red" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   GridPane.columnSpan="2"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK_DONE"/>
        <ButtonType fx:constant="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
